{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "jsx": "react",
        "lib": [
            "es2018",
            "dom"
        ],
        "baseUrl": "./",
        "paths": {
            "@gitbook/*": [
                "gitbook/*"
            ],
            "@components/*": [
                "components/*"
            ],
            "@libs/*": [
                "libs/*"
            ],
            "@styles/*": [
                "styles/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}
